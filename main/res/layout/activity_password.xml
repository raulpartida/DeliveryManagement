<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/delivery_man"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_margin="30dp"
        android:layout_gravity="center" />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Managment"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="@color/colorOlvidaste"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_below="@+id/ivLogo"/><!--Logo-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicación desarrollada por: José Raúl Partida Iñiguez"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:textColor="@color/colorOlvidaste"
        android:layout_gravity="center_vertical|end"
        android:layout_below="@id/tv1"/><!--Fijo-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical|end"
        android:text="Version 1.0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"
        android:text="04/08/2016"/>
      </LinearLayout>

</RelativeLayout>
