<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:weightSum="5">
        <TextView
        android:id="@+id/tvNumeroE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No de entrega: "
        android:textSize="20dp"
        android:layout_marginTop="15dp"
            android:layout_weight="2"/><!--Fijo -->
          <TextView
        android:id="@+id/tvNumeroEntrega"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_weight="3"
              android:textColor="@color/colorOlvidaste"
              android:layout_marginTop="15dp"/><!--Numero de Entrega -->
       </TableRow>
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="1">
         <TextView
        android:id="@+id/tvDireccionCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
             android:textColor="@color/colorOlvidaste"
        android:layout_weight="1"/><!--Direccion -->
       </TableRow>
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="4">
       <TextView
        android:id="@+id/tvCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cliente: "
        android:textSize="20dp"
           android:layout_weight="1"/><!--Fijo -->
       <TextView
        android:id="@+id/tvNombreCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
           android:textColor="@color/colorOlvidaste"
           android:layout_weight="3"/><!--Cliente -->
       </TableRow>
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="4">
       <TextView
        android:id="@+id/tvEstat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estatus:"
           android:layout_weight="1"
        android:textSize="20dp"
        android:textColor="#B40404"/><!--Fijo -->
       <TextView
        android:id="@+id/tvEstatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
           android:layout_weight="3"
        android:textColor="#B40404"/><!--Estatus de Entrega -->
       </TableRow>
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="1">
        </TableRow>
   </TableLayout>
</RelativeLayout>
